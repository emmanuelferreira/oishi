
<div class="modal fade" id="modal-<%= product.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">

    <div class="modal-content d-flex justify-content-around">
      <div class="modal-header">
        <h2 class="modal-title" id="exampleModalLabel"><%= product.name.capitalize %></h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-4 category-name">
              <img src="<%= product.image %>" class="img-show">
              <h6><%=product.category.name %></h6>
            </div>


              <div class="row">
                <div class="col-4">
                  <div class="list-group list-group-flush" id="list-tab" role="tablist">
                    <a class="list-group-item list-group-item-action active" id="list-home-list" data-toggle="list" href="#list-home" role="tab" aria-controls="home">Description</a>
                    <a class="list-group-item list-group-item-action" id="list-profile-list" data-toggle="list" href="#list-profile" role="tab" aria-controls="profile">Nutri Score</a>
                    <a class="list-group-item list-group-item-action" id="list-messages-list" data-toggle="list" href="#list-messages" role="tab" aria-controls="messages">Eco Score</a>
                  </div>
                </div>

                <div class="col-8 ml-auto">
              <div class="row basket-selection justify-content-between">
                <div class="">
                  <div class="quantity-show">
                    <p>Quantity</p>
                    <%= form_for @order_product, class: "form-inline add-button", remote: true do |f| %>
                      <%= f.hidden_field :product_id, value: product.id%>
                      <%= f.text_field :quantity, value: 1, min: 1, size: 2 %>
                      <%= f.submit "Add", size: 10, class:"btn btn-info" %>
                    <% end %>
                  </div>
                </div>
                <div class="col-4">
                  <div class="price-show">
                    <p>Price</p>
                    <h4><%=product.price  %>CHF</h4>
                  </div>
                </div>
              </div>
                
                <div class="col-8">
                  <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade" id="list-home" role="tabpanel" aria-labelledby="list-home-list">
                      <h6>Quantity: <%= product["quantity-product"] %> </h6>
                    </div>
                    <div class="tab-pane fade" id="list-profile" role="tabpanel" aria-labelledby="list-profile-list">
                      <h6>Proteins: <%= product["nutriments"]["proteins"] %> gr</h6>
                      <br>
                      <h6>Sugar: <%= product["nutriments"]["sugars"] %> gr </h6>
                      <br>
                      <h6>Energie: <%= product["nutriments"]["energy-kcal"] %> Kcal </h6>
                    </div>
                    <div class="tab-pane fade" id="list-messages" role="tabpanel" aria-labelledby="list-messages-list">
                      <h6>Eco-score: <%= product.eco_score %></h6>
                      <br>
                      <h6>Origin: <%= product["origin"] %> </h6>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="suggestion">
              <h6 class="suggestion-title">Suggestions</h6>
            <div class="row suggestions-list d-flex justify-content-around">
              <% Product.where(category: product.category).order(eco_score: :asc).take(3).each do |product_suggestion| %>
              <div class="img-suggestions">
                <%= image_tag product_suggestion.image %>
              </div>
              <% end %>
            </div> 
          </div> 
        </div>
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


