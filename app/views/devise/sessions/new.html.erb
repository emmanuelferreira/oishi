<div id="leeks-sign-up"></div>
<div id="cherries-sign-up"></div>
<div id="cumcumber-sign-up"></div>
<div id="watermelon-sign-up"></div>
<div id="beacon-sign-up"></div>
<div id="fish-sign-up"></div>

<div class="container container-sign-up container-login">
  <div class="row row-sign-up sign_up_form_layout">
    <div class="col-xs-12 col-sm-6 col-sm-offset-6 col-login">

      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions form-actions-sign-up form-actions-login">
          <%= f.button :submit, "Log in", class: "btn btn-info" %>
        </div>
      <% end %>

      <div class="links-login">
        <%= render "devise/shared/links" %>
      </div>


    </div>
  </div>
</div>
