
<div class="grid-container">
  <h1 class="overview-title"> Dashboard </h1>

  <br>

  <div class="current-order">
    <h3>Last 5 Purchases</h3>
    <% Order.where(user_id: current_user.id).limit(5).each do |order|%>
      <ul>
        <li>
          <div class="list-dashboard">
            <div class="list-product-dashboard-infos">
              <h1></h1>
              <h2>Order nÂ°<%=order.id %> - <%= order.products.count %> items ordered</h2>
              <span><strong>Deliver Date:</strong> <%= order.deliver_date %> - <strong>Total:</strong> <%= order.total.round(2) %> CHF</span>
              <%= link_to "Show Order details", order_path(order) %>
            </div>
          </div>
        </li>
      </ul>
    <% end %>
  </div>


  <div class="header">
    <h2>Dashboard</h2>
  </div>

  <div class="eco-chart">
    <div class="eco-chart chart">
      <%= column_chart [
              {
                  name: "A",
                  data: Product.joins(:orders).where("orders.user_id = ?", current_user.id).where("products.eco_score = 'A'").group(:orders).count ,
                  color: ["green"],
                  stack: "stack 1"
              },
              {
                  name: "B",
                  data: Product.joins(:orders).where("orders.user_id = ?", current_user.id).where("products.eco_score = 'B'").group(:orders).count ,
                  stack: "stack 1"
              },
              {
                  name: "C",
                  data: Product.joins(:orders).where("orders.user_id = ?", current_user.id).where("products.eco_score = 'C'").group(:orders).count ,
                  stack: "stack 1"
              },
              {
                  name: "D",
                  data: Product.joins(:orders).where("orders.user_id = ?", current_user.id).where("products.eco_score = 'D'").group(:orders).count ,
                  stack: "stack 1"
              },
              {
                  name: "E",
                  data: Product.joins(:orders).where("orders.user_id = ?", current_user.id).where("products.eco_score = 'E'").group(:orders).count ,
                  stack: "stack 1"
              },
              {
                  name: "F",
                  data: Product.joins(:orders).where("orders.user_id = ?", current_user.id).where("products.eco_score = 'F'").group(:orders).count ,
                  stack: "stack 1"
              },
          ], stacked: true
      %>
    </div>
  </div>

  <div class="details-chart">
    <div class="nutritionnal-chart chart">
      <%= column_chart [
              {
                  name: "A",
                  data: Product.joins(:orders).where("orders.user_id = ?", current_user.id).where("products.nutri_score = 'A'").group(:orders).count ,
                  stack: "stack 1"
              },
              {
                  name: "B",
                  data: Product.joins(:orders).where("orders.user_id = ?", current_user.id).where("products.nutri_score = 'B'").group(:orders).count ,
                  stack: "stack 1"
              },
              {
                  name: "C",
                  data: Product.joins(:orders).where("orders.user_id = ?", current_user.id).where("products.nutri_score = 'C'").group(:orders).count ,
                  stack: "stack 1"
              },
              {
                  name: "D",
                  data: Product.joins(:orders).where("orders.user_id = ?", current_user.id).where("products.nutri_score = 'D'").group(:orders).count ,
                  stack: "stack 1"
              },
              {
                  name: "E",
                  data: Product.joins(:orders).where("orders.user_id = ?", current_user.id).where("products.nutri_score = 'E'").group(:orders).count ,
                  stack: "stack 1"
              },
              {
                  name: "F",
                  data: Product.joins(:orders).where("orders.user_id = ?", current_user.id).where("products.nutri_score = 'F'").group(:orders).count ,
                  stack: "stack 1"
              },
          ], stacked: true
      %>
    </div>
  </div>

  <div class="details-chart">
    <div class="spendings-chart chart">
      <%= column_chart Order.where(user_id: current_user.id).pluck(:id, :total), xtitle: "Orders", ytitle: "Total spent (CHF)" %>
    </div>
  </div>



  <div class="row justify-content-end top-buffer">
    <div class="col-4">
      <h4>Last Month Consumption Overview</h4>
      <ul>
        <li>Global Ecoscore:  <%= @last_eco_score_avg %></li>
        <li>Global Nutriscore: <%= @last_nutri_score_avg %></li>
        <li>Total Spendings: <%= @last_month_orders.pluck(:total).inject(0) {|sum, ele| sum += ele}.to_f.round(2) %> CHF</li>
      </ul>
    </div>
    <div class="col-4">
      <h4>Current Month Consumption Overview</h4>
      <ul>
        <li>Global Ecoscore:  <%= @current_eco_score_avg %></li>
        <li>Global Nutriscore: <%= @current_nutri_score_avg %></li>
        <li>Total Spendings: <%= @current_month_orders.pluck(:total).inject(0) {|sum, ele| sum += ele}.to_f.round(2) %> CHF</li>
      </ul>
    </div>
  </div>

</div>
